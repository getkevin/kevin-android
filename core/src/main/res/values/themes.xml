<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Kevin.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorControlHighlight">?kevinRippleOnPrimaryColor</item>

        <item name="android:windowAnimationStyle">?kevinWindowTransitionStyle</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Kevin.BottomSheet.Base</item>

        <item name="kevinToolbarColor">@color/white</item>

        <item name="kevinPrimaryBackgroundColor">@color/white</item>
        <item name="kevinSecondaryBackgroundColor">@color/white</item>

        <item name="kevinSelectedOnPrimaryColor">@color/light_baby_blue</item>
        <item name="kevinSelectedOnSecondaryColor">@color/light_baby_blue</item>

        <item name="kevinRippleOnPrimaryColor">@color/blue</item>
        <item name="kevinRippleOnSecondaryColor">@color/blue</item>

        <item name="kevinErrorTextColor">@color/kevin_red</item>
        <item name="kevinPrimaryTextColor">@color/dark_blue</item>
        <item name="kevinSecondaryTextColor">@color/gray_02</item>

        <item name="kevinPrimaryButtonStyle">@style/Kevin.Button.Primary</item>
        <item name="kevinToolbarStyle">@style/Kevin.Toolbar</item>
        <item name="kevinWindowTransitionStyle">@style/Kevin.Window.Transition</item>
    </style>

    <style name="Theme.Kevin.BottomSheet.Base" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Kevin.BottomSheet.Style</item>
        <item name="snackbarStyle">@style/Kevin.BottomSheet.Snackbar</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>