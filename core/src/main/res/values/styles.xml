<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Kevin.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:background">?kevinToolbarColor</item>
        <item name="titleTextColor">?kevinPrimaryTextColor</item>
    </style>

    <style name="Kevin.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="Kevin.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/kevin_blue</item>
        <item name="fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/gray_5</item>
    </style>

    <style name="Kevin.TextInput.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/gray_2</item>
        <item name="boxStrokeErrorColor">@color/warning_red</item>
        <item name="errorTextAppearance">@style/Kevin.Text.Error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Kevin.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/Kevin.Text.Title2</item>
    </style>

    <style name="Kevin.Text.Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?kevinSecondaryTextColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.ModalTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?kevinPrimaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?kevinPrimaryTextColor</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.Headline3" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">?kevinPrimaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.Title2" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">?kevinPrimaryTextColor</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.Subtitle1" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">?kevinSecondaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Text.Error" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/warning_red</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Kevin.Window.Transition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Kevin.BottomSheet.Style" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Kevin.BottomSheet.Style.ShapeOverlay</item>
        <item name="backgroundTint">?kevinSecondaryBackgroundColor</item>
    </style>

    <style name="Kevin.BottomSheet.Style.ShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Kevin.BottomSheet.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">22dp</item>
    </style>
</resources>