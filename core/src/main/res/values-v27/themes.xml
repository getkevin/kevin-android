<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="Theme.Kevin.Base" parent="Theme.Kevin.Base.21">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/kevin_extra_light_blue</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Kevin.Base.Light" parent="Theme.Kevin.Base.21.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/kevin_extra_light_blue</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Kevin.Base.Dark" parent="Theme.Kevin.Base.21.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/kevin_blue</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

</resources>