<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  >

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name="com.example.payments_bank.SampleApplication"
    android:icon="@mipmap/kevin_ic_launcher"
    android:label="@string/text_app_name"
    android:roundIcon="@mipmap/kevin_ic_launcher_round"
    >

    <activity
      android:name="com.example.payments_bank.main.MainActivity"
      android:exported="true"
      android:screenOrientation="portrait"
      android:theme="@style/BaseTheme"
      tools:ignore="LockedOrientationActivity"
      >

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <!-- Update your AndroidManifest with deep links for your callback urls -->
      <!-- More info: https://developer.kevin.eu/home/mobile-sdk/android/deep-linking-support -->
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <data
          android:host="redirect.authorization"
          android:scheme="kevin"
          />
      </intent-filter>

    </activity>
  </application>

</manifest>