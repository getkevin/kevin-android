<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="colorControlHighlight">?rippleOnPrimaryColor</item>

        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.1</item>

        <item name="android:statusBarColor">@color/black_30</item>
        <item name="android:navigationBarColor">@color/black_30</item>

        <!--        Whitelabel styles-->
        <item name="primaryBackgroundColor">@color/white</item>

        <item name="rippleOnPrimaryColor">@color/blue</item>

        <item name="toolbarColor">@color/white</item>

        <item name="primaryTextColor">@color/dark_blue</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseKevinTheme" parent="Theme.Kevin.Base">
        <item name="kevinToolbarColor">@color/white</item>

        <item name="kevinPrimaryBackgroundColor">@color/white</item>
        <item name="kevinSecondaryBackgroundColor">@color/white</item>

        <item name="kevinSelectedOnPrimaryColor">@color/light_baby_blue</item>
        <item name="kevinSelectedOnSecondaryColor">@color/light_baby_blue</item>

        <item name="kevinRippleOnPrimaryColor">@color/blue</item>
        <item name="kevinRippleOnSecondaryColor">@color/blue</item>

        <item name="kevinErrorTextColor">@color/kevin_red</item>
        <item name="kevinPrimaryTextColor">@color/dark_blue</item>
        <item name="kevinSecondaryTextColor">@color/gray_02</item>
    </style>

    <style name="KevinTheme" parent="BaseKevinTheme" />

    <style name="BaseKevinBottomSheetTheme" parent="Theme.Kevin.BottomSheet.Base" />

    <style name="KevinBottomSheetTheme" parent="BaseKevinBottomSheetTheme" />
</resources>