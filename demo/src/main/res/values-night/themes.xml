<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/circular_std_book</item>
        <item name="colorControlHighlight">?rippleOnPrimaryColor</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>

        <!--        Whitelabel styles-->
        <item name="primaryBackgroundColor">@color/black</item>
        <item name="secondaryBackgroundColor">@color/gray_0</item>
