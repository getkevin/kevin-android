<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="colorControlHighlight">?rippleOnPrimaryColor</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!--        Whitelabel styles-->
        <item name="primaryBackgroundColor">@color/black</item>

        <item name="rippleOnPrimaryColor">@color/darker_blue</item>

        <item name="toolbarColor">@color/black</item>

        <item name="primaryTextColor">@color/white</item>

        <item name="secondaryTextColor">@color/gray_01</item>

        <item name="selectedOnSecondaryColor">@color/darker_blue</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="KevinTheme" parent="BaseKevinTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="kevinToolbarColor">@color/darker_blue</item>

        <item name="kevinPrimaryBackgroundColor">@color/black</item>
        <item name="kevinSecondaryBackgroundColor">@color/dark_blue</item>

        <item name="kevinSelectedOnPrimaryColor">@color/dark_blue</item>
        <item name="kevinSelectedOnSecondaryColor">@color/darker_blue</item>

        <item name="kevinRippleOnPrimaryColor">@color/darker_blue</item>
        <item name="kevinRippleOnSecondaryColor">@color/darker_blue</item>

        <item name="kevinErrorTextColor">@color/kevin_red</item>
        <item name="kevinPrimaryTextColor">@color/white</item>
        <item name="kevinSecondaryTextColor">@color/gray_02</item>
    </style>

</resources>