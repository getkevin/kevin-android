<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <!-- Only relevant for UI customization sample. -->

    <!-- 1. Override kevin. theme in your app's themes.xml file. -->

    <!-- 2. Change global kevin. theme to your custom one in your Application class.
            Open SampleApplication class to see an example. -->

    <style name="CustomKevinTheme" parent="Theme.Kevin.Base">

        <!-- 3. As an example we will switch background color to red and below we will update Toolbar's title color -->
        <item name="android:colorBackground">#FF5B5B</item>
        <item name="kevinToolbarStyle">@style/CustomToolbarTheme</item>

        <!-- 4. For a full list of all possible customizable parameters please visit
             https://developer.kevin.eu/home/mobile-sdk/android/frame-customisation -->
    </style>

    <style name="CustomToolbarTheme" parent="Kevin.Toolbar">
        <item name="titleTextColor">#FF9800</item>
    </style>

</resources>