<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/BaseTheme"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/initiate_payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_initiate_bank_payment"
        android:textColor="@color/primary_on_accent"
        app:backgroundTint="@color/primary_accent"
        app:cornerRadius="8dp"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/primary_accent"
        tools:indeterminate="false"
        tools:progress="50"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/text_initiate_bank_payment_description"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/creditor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/payment_warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/text_initiate_bank_payment_warning"
        android:textColor="@color/kevin_warning_red"
        android:textSize="12sp"
        />

</LinearLayout>